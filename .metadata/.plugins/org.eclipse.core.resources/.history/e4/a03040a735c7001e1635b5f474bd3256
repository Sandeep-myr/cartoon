package com.cartoon.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.cartoon.model.Admin;
import com.cartoon.model.CartoonModel;
import com.cartoon.service.AdminService;
import com.cartoon.service.CartoonService;

@RestController
@RequestMapping("/admin")
public class AdminController {
	@Autowired
	AdminService adminService;
	@Autowired
	CartoonService cartoonService;
	
	

	@GetMapping("/validate")
	public ResponseEntity<Admin> adminValidation(String email, String password) {

		return adminService.validateAdmin(email, password);
	}
	@PostMapping("/addCartoon")
	public ResponseEntity<CartoonModel> addCartoonByAdmin(@RequestBody CartoonModel cartoonModel){
		return cartoonService.addCartoonByAdmin(cartoonModel);
	}
	
	
	
	@PostMapping("/addCartoon")
	private CartoonModel addCartoon(@RequestBody CartoonModel cartoonModel) {
		return service.addCartoon(cartoonModel);

	}

	@GetMapping("/getAllCartoons")
	private ResponseEntity<List<CartoonModel>> getAllCartoons() {
		return service.getAllCartoons();

	}

	@GetMapping("/getCartoonById/{id}")
	private ResponseEntity<CartoonModel> getAllCartoonsById(@PathVariable("id") Long id) {
		return service.getAllCartoonsById(id);
		
	}
	@GetMapping("/getCartoonById/{name}")
	private ResponseEntity<CartoonModel> getAllCartoonsByName(@PathVariable("name") String name) {
		return service.getCartoonsByName(name);
		
	}

	@DeleteMapping("/deleteById/{id}")
	private String deleteByCartoonId(@PathVariable("id") Long id) {
		return service.deleteCartoonById(id);
	}

	@PutMapping("/updateById")
	private CartoonModel updateCartoonById(@RequestBody CartoonModel cartoonModel) {
		return service.updateCartoonById(cartoonModel);
	}

}
